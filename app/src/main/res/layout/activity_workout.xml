<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/myColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".WorkoutActivity"
        android:background="@color/myColor"
        >

        <ImageView
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:src="@drawable/logo"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myColor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_spate"
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/spate"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/b5"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/b1"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/b3"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/b4"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/b2"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
android:text="@string/spate"
                />
        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myColor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_piept"
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/piept"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/p1"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/p2"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/p3"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/p4"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/p5"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                android:text="@string/piept"
                />
        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myColor"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_brate"
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/brate"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/a0"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/a1"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/a3"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/a4"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/a5"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="155dp"
                    android:src="@drawable/a6"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                android:text="@string/brate"
                />
        </LinearLayout>


    </LinearLayout>

</ScrollView>

